<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/recyc_card_margin"
    android:layout_marginLeft="@dimen/recyc_card_margin"
    android:layout_marginRight="@dimen/recyc_card_margin"
                                    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="4dp">
    <!--style="@style/item_icon"-->
    <!--<ImageView-->
        <!--android:id="@+id/icon"-->

        <!--android:layout_width="32dp"-->
        <!--android:layout_height="32dp"-->
        <!--android:layout_margin="4dp"-->
        <!--android:layout_marginStart="12dp"-->
        <!--app:srcCompat="@drawable/ic_notifications_black_24dp"/>-->
<TextView
    android:id="@+id/tv_time_notice"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="36sp"
    android:layout_margin="4dp"
    android:text="12:30"
    />

<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_marginLeft="12dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_content_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="content"/>

    <TextView
        android:id="@+id/tv_alert_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="createTime"/>
</LinearLayout>
    <Switch
        android:id="@+id/switcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:splitTrack="false"/>
</LinearLayout>
</android.support.v7.widget.CardView>