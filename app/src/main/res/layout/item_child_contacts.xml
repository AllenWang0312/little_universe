<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cir_portrait_item_contact"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="4dp"/>

    <TextView
        android:id="@+id/tv_name_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="71dp"
        android:text="name"/>

    <TextView
        android:id="@+id/tv_tel_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_name_contact"
        android:layout_alignBottom="@+id/tv_name_contact"
        android:layout_toEndOf="@+id/tv_name_contact"
        android:text="12345678901"/>

    <ImageView
        android:id="@+id/iv_item_weibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_info_black_24dp"
        android:layout_alignTop="@+id/iv_item_qq"
        android:layout_toStartOf="@+id/iv_item_qq"/>

    <ImageView
        android:id="@+id/iv_item_wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/iv_item_weibo"
        app:srcCompat="@drawable/ic_info_black_24dp"/>

    <ImageView
        android:id="@+id/iv_item_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_info_black_24dp"/>

</RelativeLayout>