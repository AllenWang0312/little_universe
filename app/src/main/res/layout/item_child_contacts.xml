<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="24dp"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginRight="4dp"
    >
    <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cir_portrait_item_contact"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:layout_margin="8dp"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/tv_name_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cir_portrait_item_contact"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/cir_portrait_item_contact"
            android:text="name"/>

        <TextView
            android:id="@+id/tv_tel_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cir_portrait_item_contact"
            android:layout_alignStart="@+id/tv_name_contact"
            android:text="12345678901"/>

        <ImageView
            android:id="@+id/iv_item_message"
            android:layout_width="@dimen/action_icon_size"
            android:layout_height="@dimen/action_icon_size"
            android:layout_alignTop="@+id/iv_item_third"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/iv_item_third"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/ic_message_black_24dp"/>

        <ImageView
            android:id="@+id/iv_item_phone"
            android:layout_width="@dimen/action_icon_size"
            android:layout_height="@dimen/action_icon_size"
            android:layout_alignTop="@+id/iv_item_message"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/iv_item_message"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/ic_phone_black_24dp"/>

        <ImageView
            android:id="@+id/iv_item_third"
            android:layout_width="@dimen/action_icon_size"
            android:layout_height="@dimen/action_icon_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_forum_black_24dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
